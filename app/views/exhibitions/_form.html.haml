.exhibition-wrapper
  .exhibition-header
    = link_to root_path do
      = image_tag 'logo/logo.png',size:'142x41'
  .exhibition-main
    = form_for @exhibition do |f|
      .exhibition-container.size
        .item
          .item__label 商品画像
          .item__required 必須
        %p.font 最大10枚までアップロードできます
        #image-box
          = f.fields_for :images do |image|
            .js-file_group{"data-index" => "#{image.index}"}
              = image.file_field :image_url, multipart: true, class: 'js-file'
              %br/
              %span.js-remove 削除
            - if @exhibition.persisted?
              = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
          - if @exhibition.persisted?
            .js-file_group{"data-index" => "#{@exhibition.images.count}"}
              = file_field_tag :image_url, multipart: true, class: 'js-file', name: "exhbition[images_attributes][#{@exhibition.images.count}][image_url]"
              .js-remove 削除
              %i(class="fa fa-camera")
      .exhibition-container
        .item
          .item__label 商品名
          .item__required 必須
        = f.text_field :name,  placeholder: "40字まで"
        .item
          .item__label 商品の説明
          .item__required 必須
        = f.text_area :explanation, placeholder: "商品の説明（1,000文字以内）\n（色、素材、重さ、定価、注意点など）"
        .count 0/1000
      .exhibition-container
        .items
          .items__label 商品の詳細
        .item
          .item__label カテゴリー
          .item__required 必須
        = f.collection_select :category_id, Exhibition_category.all, :id, :category
        .item
          .item__label ブランド
          .item__required--not 任意
        = f.text_field :brand, placeholder: "例）シャネル"
        .item
          .item__label 商品の状態
          .item__required 必須
        = f.collection_select  :condition_id, Exhibition_condition.all, :id, :condition
      .exhibition-container
        .items
          .items__label 配送について
          -# //ガイド//
          -# = link_to '#' do
          -#   %i.far.fa-question-circle
        .item
          .item__label 配送料の負担
          .item__required 必須
        = f.collection_select :shipping_method_id, Exhibition_shipping_method.all, :id, :burden
        .item
          .item__label 配送元の地域
          .item__required 必須
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        .item
          .item__label 発送までの日数
          .item__required 必須
        = f.collection_select :shipping_date_id, Exhibition_shipping_date.all, :id, :date
      .exhibition-container
        .items 
          .items__label 価格（¥300〜9,999,999)
          -# //ガイド//
          -# = link_to '#' do
          -#   %i.far.fa-question-circle
        .item.item--center
          .item__label 販売価格
          .item__required 必須
          .item__right
            ¥
            = f.number_field :price, style:"text-align:right", placeholder: "0", class:'price'
        .sale 
          %p.font.sale__left 販売手数料（10%）
          .sale__right ー
        .sale.border-top
          %p.font.sale__left 販売利益
          .sale__right ー
        .actions
          = f.submit "出品する", class:"actions--blue"
          = link_to 'もどる', root_path