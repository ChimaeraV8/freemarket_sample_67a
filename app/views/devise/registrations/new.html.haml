.wrapper
  .signup-bucket
    = render  'devise/shared/progress_header' 
  %main.single-main 
    %section.l-single-bucket
      %h2.single-bucket__registration 会員情報入力
      = form_for(@user, url: user_registration_path)  do |f|
        = render "devise/shared/error_messages", resource: @user
        .l-single-bucket__nickname
          = f.label :ニックネーム
          %br/
          = f.text_field :nickname, autofocus: true, placeholder: "例）フリマ太郎"
        .l-single-bucket__email
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          %p メールアドレスを入力してください
        .l-single-bucket__password
          = f.label :パスワード
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
          %p パスワードを入力してください
        .l-single-bucket__password__confimation
          = f.label :確認パスワード
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
          %p 再度パスワードを入力してください
        .l-single-bucket__first__name
          = f.label :お名前（全角）
          %br/
          = f.text_field :family_name, placeholder: "例）山田"
        .l-single-bucket__second__name
          = f.text_field :first_name, placeholder: "例）彩"
        .l-single-bucket__first__kana
          = f.label :お名前カナ（全角）
          %br/
          = f.text_field :family_name_kana, placeholder: "例）ヤマダ"
        .l-single-bucket__fsecond__kana
          = f.text_field :first_name_kana, placeholder: "例）アヤ"
        .l-single-bucket__birthday
          = f.label :生年月日
          %br/
          = f.date_select :birth_day, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year ), include_blank: true
        .actions
          = f.submit "次へすすむ",class:'next-btn'