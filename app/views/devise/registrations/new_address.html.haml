

.wrapper
  = render 'devise/shared/signup_header'
    
  .form__wrapper
    %h2 発送元・お届け先住所
    = form_for @address do |f|
      .field
        = f.label :郵便番号
        %span.form__require 必須
        %br/
        = f.text_field :zipcode, placeholder: "例）1234567", class: 'input__form'
        - @address.errors.full_messages_for(:zipcode).each do |message|
          %li.error__message= message
      .field__prefecture
        = f.label :都道府県
        %span.form__require 必須
        %br/
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
      .field
        = f.label :市町村区
        %span.form__require 必須
        %br/
        = f.text_field :address, placeholder: "例）横浜市緑区", class: 'input__form'
        - @address.errors.full_messages_for(:address).each do |message|
          %li.error__message= message
      .field
        = f.label :番地
        %span.form__require 必須
        %br/
        = f.text_field :municipality, placeholder: "例）青山1-1-1", class: 'input__form'
        - @address.errors.full_messages_for(:municipality).each do |message|
          %li.error__message= message
      .field
        = f.label :建物名（任意）
        %br/
        = f.text_field :building_name, placeholder: "例）柳ビル103", class: 'input__form'
        - @address.errors.full_messages_for(:building_name).each do |message|
          %li.error__message= message
      .field
        = f.label :電話（任意）
        %br/
        = f.text_field :tel, placeholder: "例）09012345678", class: 'input__form'
        - @address.errors.full_messages_for(:tel).each do |message|
          %li.error__message= message
      .actions
        = f.submit "登録", class: 'submit__btn'

  = render 'devise/shared/signup_footer'
