= render 'top/header'
.nav
  %ul
    %li=link_to 'TOP',root_path
    %i(class="fas fa-angle-right")
    %li=link_to 'カテゴリー一覧', categories_path
    %i(class="fas fa-angle-right")
    %p=@category.name
.brand-category-items
  .brand-category-items__link-list
    - @category.children.each do |category|
      = link_to category.name, category
  .brand-category-items__title
    %h2= "#{@category.name}の商品一覧"
  .brand-category-items__item
    -@products.each do |product|
      =link_to product,class:'pickup__link ' do
        .pickup__content
          .pickup__img
            -if product.sales_status == "sold_out"
              .pickup__img__sold
              .pickup__img__sold__font sold
            - product.images.each_with_index do |image,i|
              = image_tag image.image_url.url,size:"180x200"
              - break if i == 0
          .pickup__body
            %h3.name
              = product.name
            %ul.detail
              %li.detail-name
                = product.price
              %li.detail-name
                ★ 0
            %p.tax-included
              (税込)
= paginate @products
%h2.footer-category
  =@category.name
